<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wakeup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wakeup">
        <activity
            android:name=".navigation.concentrate"
            android:label="@string/title_activity_concentrate"
            android:theme="@style/Theme.Wakeup.NoActionBar"></activity>
        <activity
            android:name=".activities.Prevent_drowsiness"
            android:label="@string/title_activity_prevent_drowsiness"
            android:theme="@style/Theme.Wakeup.NoActionBar" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>