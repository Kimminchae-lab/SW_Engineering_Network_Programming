<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".navigation.FocusFragment">

    <ListView
        android:id="@+id/listView_TodoList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:dividerHeight="15dp"
        android:paddingHorizontal="15dp"
        android:paddingBottom="20dp"
        android:divider="@color/backgroundGray"
        android:background="@color/backgroundGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_AddTodoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView_TodoList" />


    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu_colorNormal="#FF8000"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Item1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="160dp"
            android:src="@drawable/rain"
            android:visibility="invisible"
            app:fab_colorNormal="#FFFFFF"
            app:elevation="6dp"
            app:fab_label="비 소리 ASMR" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/wave"
            android:visibility="invisible"
            app:fab_colorNormal="#FFFFFF"
            app:elevation="6dp"
            app:fab_label="6Hz 세타파" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/fire"
            android:visibility="invisible"
            app:fab_colorNormal="#FFFFFF"
            app:elevation="6dp"
            app:fab_label="장작불 타는 소리" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/piano"
            android:visibility="invisible"
            app:fab_colorNormal="#FFFFFF"
            app:elevation="6dp"
            app:fab_label="피아노" />


    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>